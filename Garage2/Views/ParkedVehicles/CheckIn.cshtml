@model Garage2.Models.ParkedVehicle

@{
    ViewData["Title"] = "Check in";
}

<div class="my-10 mx-auto max-w-md">
    <h1 class="mb-6 text-center text-3xl font-bold">Check in</h1>

    <h4 class="text-center text-lg font-semibold">Enter vehicle details to check in</h4>
    <hr class="my-4 border-gray-300" />

    <form asp-action="CheckIn" class="space-y-4">
        <div asp-validation-summary="ModelOnly" class="text-red-500 text-center"></div>

        <div class="gap-x-4 flex items-center justify-between">
            <label asp-for="VehicleType" class="text-gray-700 w-1/3 text-center font-medium"></label>
            <select asp-for="VehicleType" class="py-2 px-3 text-gray-700 w-2/3 appearance-none rounded border leading-tight shadow focus:outline-none focus:shadow-outline" asp-items="ViewBag.VehicleTypes"></select>
            <span asp-validation-for="VehicleType" class="text-red-500 text-sm"></span>
        </div>

        <div class="gap-x-4 flex items-center justify-between">
            <label asp-for="RegistrationNumber" class="text-gray-700 w-1/3 text-center font-medium"></label>
            <input asp-for="RegistrationNumber" class="py-2 px-3 text-gray-700 w-2/3 appearance-none rounded border leading-tight shadow focus:outline-none focus:shadow-outline" />
            <span asp-validation-for="RegistrationNumber" class="text-red-500 text-sm"></span>
        </div>

        <div class="gap-x-4 flex items-center justify-between">
            <label asp-for="Color" class="text-gray-700 w-1/3 text-center font-medium"></label>
            <input asp-for="Color" class="py-2 px-3 w-2/3 appearance-none rounded border leading-tight shadow focus:outline-none focus:shadow-outline" type="color" />
            <span asp-validation-for="Color" class="text-red-500 text-sm"></span>
        </div>

        <div class="gap-x-4 flex items-center justify-between">
            <label asp-for="Make" class="text-gray-700 w-1/3 text-center font-medium"></label>
            <input asp-for="Make" class="py-2 px-3 text-gray-700 w-2/3 appearance-none rounded border leading-tight shadow focus:outline-none focus:shadow-outline" />
            <span asp-validation-for="Make" class="text-red-500 text-sm"></span>
        </div>

        <div class="gap-x-4 flex items-center justify-between">
            <label asp-for="Model" class="text-gray-700 w-1/3 text-center font-medium"></label>
            <input asp-for="Model" class="py-2 px-3 text-gray-700 w-2/3 appearance-none rounded border leading-tight shadow focus:outline-none focus:shadow-outline" />
            <span asp-validation-for="Model" class="text-red-500 text-sm"></span>
        </div>

        <div class="gap-x-4 flex items-center justify-between">
            <label asp-for="NumberOfWheels" class="text-gray-700 w-1/3 text-center font-medium"></label>
            <input asp-for="NumberOfWheels" class="py-2 px-3 text-gray-700 w-2/3 appearance-none rounded border leading-tight shadow focus:outline-none focus:shadow-outline" />
            <span asp-validation-for="NumberOfWheels" class="text-red-500 text-sm"></span>
        </div>

        <div class="mt-6 space-x-4 flex justify-center">
            <input type="submit" value="Check in" class="bg-green-600 text-white px-4 py-2 cursor-pointer rounded hover:bg-green-700" />
            <a asp-action="Index" class="bg-gray-700 text-white px-4 py-2 rounded hover:bg-gray-800">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
