@model ParkedVehicleCheckInViewModel

@{
    ViewData["Title"] = "Check In";
}

<div class="mx-auto my-10 max-w-md">
    <h1 class="mb-6 text-center text-3xl font-bold">Check In</h1>

    <h4 class="text-center text-lg font-semibold">Enter vehicle details to check in</h4>
    <hr class="my-4 border-gray-300" />

    <form asp-action="CheckIn" class="space-y-4">
        <div asp-validation-summary="ModelOnly" class="mb-4 text-center text-red-500"></div>

        <div class="flex flex-col gap-y-2">
            <label asp-for="VehicleTypesId" class="font-medium text-gray-700"></label>
            <span asp-validation-for="VehicleTypesId" class="mb-1 text-sm text-red-500"></span>
            <select asp-for="VehicleTypesId" asp-items="ViewBag.VehicleTypes" class="w-full appearance-none rounded border px-3 py-2 leading-tight text-gray-700 shadow focus:outline-none focus:shadow-outline"></select>
        </div>

        <div class="flex flex-col gap-y-2">
            <label asp-for="RegistrationNumber" class="font-medium text-gray-700"></label>
            <span asp-validation-for="RegistrationNumber" class="mb-1 text-sm text-red-500"></span>
            <input asp-for="RegistrationNumber" class="w-full appearance-none rounded border px-3 py-2 leading-tight text-gray-700 shadow focus:outline-none focus:shadow-outline" />
        </div>

        <div class="flex flex-col gap-y-2">
            <label asp-for="Color" class="font-medium text-gray-700"></label>
            <span asp-validation-for="Color" class="mb-1 text-sm text-red-500"></span>
            <input asp-for="Color"
                   class="w-full rounded-md border px-3 py-2 leading-tight shadow focus:outline-none focus:shadow-outline"
                   type="color"
                   style="height: 50px; width: 100%; padding: 0; border-radius: 5px; border: 2px solid #ccc;" />
        </div>

        <div class="flex flex-col gap-y-2">
            <label asp-for="Make" class="font-medium text-gray-700"></label>
            <span asp-validation-for="Make" class="mb-1 text-sm text-red-500"></span>
            <input asp-for="Make" class="w-full appearance-none rounded border px-3 py-2 leading-tight text-gray-700 shadow focus:outline-none focus:shadow-outline" />
        </div>

        <div class="flex flex-col gap-y-2">
            <label asp-for="Model" class="font-medium text-gray-700"></label>
            <span asp-validation-for="Model" class="mb-1 text-sm text-red-500"></span>
            <input asp-for="Model" class="w-full appearance-none rounded border px-3 py-2 leading-tight text-gray-700 shadow focus:outline-none focus:shadow-outline" />
        </div>

        <div class="flex flex-col gap-y-2">
            <label asp-for="NumberOfWheels" class="font-medium text-gray-700"></label>
            <span asp-validation-for="NumberOfWheels" class="mb-1 text-sm text-red-500"></span>
            <input asp-for="NumberOfWheels" class="w-full appearance-none rounded border px-3 py-2 leading-tight text-gray-700 shadow focus:outline-none focus:shadow-outline" />
        </div>

        <div class="flex flex-col gap-y-2">
            <label asp-for="ParkingSpotId" class="font-medium text-gray-700">Parking Spot</label>
            <span asp-validation-for="ParkingSpotId" class="mb-1 text-sm text-red-500"></span>
            <select asp-for="ParkingSpotId" class="w-full appearance-none rounded border px-3 py-2 leading-tight text-gray-700 shadow focus:outline-none focus:shadow-outline" asp-items="ViewBag.ParkingSpots"></select>
        </div>

        <div class="mt-6 flex justify-center space-x-4 pt-7">
            <input type="submit" value="Check In" class="cursor-pointer rounded bg-indigo-700 px-4 py-2 text-white hover:bg-indigo-600" />
            <a asp-action="Index" class="rounded bg-gray-700 px-4 py-2 text-white hover:bg-gray-800">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
