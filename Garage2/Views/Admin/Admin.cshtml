@model IEnumerable<Garage301.Models.ParkingSpot>

@{
    ViewData["Title"] = "Index";
}
<h2>Manage Parking Spots</h2>

<table class="table">
    <thead>
        <tr>
            <th>Spot Number</th>
            <th>Occupied</th>
            <th>Location</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var spot in Model)
            {
                <tr>
                    <td>@spot.SpotNumber</td>
                    <td>@spot.IsOccupied</td>
                    <td>@spot.Location</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">No parking spots available.</td>
            </tr>
        }
    </tbody>
</table>

<form method="post" asp-action="IncreaseParkingSpots" asp-controller="Admin">
    <button class="rounded bg-indigo-700 px-4 py-2 text-white hover:bg-indigo-600">Add</button>
</form>

<form method="post" asp-action="DecreaseParkingSpots" asp-controller="Admin" style="margin-top: 10px;">
    <button class="rounded bg-indigo-700 px-4 py-2 text-white hover:bg-indigo-600">Remove</button>
</form>
